<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/base_dialog_parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="30dp"
        android:background="@drawable/base_resource_shape_white_r12"
        android:paddingBottom="24dp">

        <ImageView
            android:id="@+id/base_module_dialog_close"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:padding="13dp"
            android:src="@drawable/base_resource_close_black" />

        <TextView
            android:id="@+id/base_module_dialog_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/base_module_dialog_close"
            android:layout_centerHorizontal="true"
            android:text="标题"
            android:textColor="@color/base_resource_textPrimary"
            android:textSize="16dp"
            android:textStyle="bold" />

        <FrameLayout
            android:id="@+id/base_module_dialog_message_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/base_module_dialog_title"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp">

            <TextView
                android:id="@+id/base_module_dialog_message"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="20dp"
                android:text="标题asdfadsf发送大附件哦偶尔金佛啊撒旦解放哦啊手动阀骄傲上的飞机"
                android:textColor="@color/base_resource_textPrimary"
                android:textSize="14sp" />

        </FrameLayout>

        <Button
            android:id="@+id/base_module_dialog_negative"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/base_module_dialog_message_container"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="30dp"
            android:background="@drawable/base_resource_selector_button_grey_aaa_r8"
            android:text="取消"
            android:textColor="@color/base_resource_white"
            android:textSize="14sp" />

        <Button
            android:id="@+id/base_module_dialog_positive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/base_module_dialog_message_container"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/base_resource_selector_button_theme_r8"
            android:text="确定"
            android:textColor="@color/base_resource_white"
            android:textSize="14sp" />

    </RelativeLayout>

</FrameLayout>
